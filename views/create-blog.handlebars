{{#if session.loggedIn}}
<div class="card">
    <h3 class="card-header">Create New Post</h3>
    <form class="card-body new-post-form" id="create-blog-form">
        <label for="post-title" class="form-label">Title</label>
        <input type="text" id="blog-title" name="title" class="form-input" />


        <label class="form-label" for="content">Content</label>
        <input id="blog-content" name="content" class="form-input" />

        <button type="submit" class="btn">Create</button>
    </form>
</div>
{{/if}}

<script src="/js/create-blog.js"></script>