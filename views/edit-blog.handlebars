<div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body" id="edit-post-form">
        <label for="post-title" class="form-label">Title</label>
        <input name="post-title" type="text" value="{{blog.title}}" class="form-input" id="title"/>
        <label class="form-label" for="content">Content</label>
        <input name="content" type="text" value="{{blog.content}}" class="form-input" id="body" />
        <button type="submit" id="edit-btn" data-id="{{blog.id}}"class="btn">Update Blog</button>
        <button type="button" class="delete-post-btn btn">Delete Post</button>
    </form>
</div>


<script src="/js/update-post.js"></script>