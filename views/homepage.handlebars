  <section class="container thumbnail-container">
    <div class="row">
 {{#each blogs as |blog|}}
  <div class="card col-12 col-lg-4 col-md-6">
        <div class="card-body">  
          <h4 class="card-title"> Week {{blog.title}}</h4>
          <p class="card-text">
